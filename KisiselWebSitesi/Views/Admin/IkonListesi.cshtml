
@{
    ViewBag.Title = "IkonListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4">Ikonlar Sayfasi</h2>
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Ikon</th>
        <th>Guncelle</th>
        <th>Sil</th>
    </tr>

    @foreach (var x in Model)
    {
        <tr>
            <td>@x.id</td>
            <td><i class="@x.ikon"></i></td>
            <td><a href="/Admin/IkonGetir/@x.id" class="btn btn-primary">Guncelle</a></td>
            <td><a href="/Admin/IkonSil/@x.id" class="btn btn-danger">Sil</a></td>
        </tr>
    }
</table>
<a href="/Admin/YeniIkon/" class="btn btn-primary">Yeni Ikon Ekle</a>

