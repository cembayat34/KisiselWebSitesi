    <div style="margin-left:25%">

        <div class="w3-container w3-teal" style="background-image:linear-gradient(120deg, #3498db, #8e44ad)">
            <h1>Kisisel Web Sitesi</h1>
        </div>


        <div class="w3-container">
            @RenderBody()
        </div>

    </div>

